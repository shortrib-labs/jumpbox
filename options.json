{
  "DiskProvisioning": "flat",
  "IPAllocationPolicy": "dhcpPolicy",
  "IPProtocol": "IPv4",
  "PropertyMapping": [
    {
      "Key": "instance-id",
      "Value": $instanceId
    },
    {
      "Key": "hostname",
      "Value": $fqdn
    },
    {
      "Key": "seedfrom",
      "Value": ""
    },
    {
      "Key": "public-keys",
      "Value": ""
    },
    {
      "Key": "user-data",
      "Value": $userdata
    },
    {
      "Key": "password",
      "Value": $password
    }
  ],
  "NetworkMapping": [
    {
      "Name": "VM Network",
      "Network": $network
    }
  ],
  "MarkAsTemplate": false,
  "PowerOn": false,
  "InjectOvfEnv": false,
  "WaitForIP": false,
  "Name": $fqdn
}
